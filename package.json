{
  "name": "discord-rag-bot",
  "version": "1.0.0",
  "description": "RAG-powered Discord Bot with Web API using TypeScript, Hono, and Mastra",
  "private": true,
  "workspaces": [
    "src/apps/*",
    "src/packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "dev:discord-bot": "npm run dev --workspace=src/apps/discord-bot",
    "test": "npm run test --workspaces",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "npm run test:integration --workspace=src/apps/discord-bot",
    "test:integration:setup": "npm run test:integration:setup --workspace=src/apps/discord-bot",
    "test:integration:cleanup": "npm run test:integration:cleanup --workspace=src/apps/discord-bot",
    "dev:integration": "npm run dev:integration --workspace=src/apps/discord-bot",
    "dev:integration:setup": "npm run dev:integration:setup --workspace=src/apps/discord-bot",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "clean": "npm run clean --workspaces",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f postgres"
  },
  "devDependencies": {
    "@types/node": "^24.0.15",
    "typescript": "^5.8.3",
    "tsx": "^4.20.3",
    "eslint": "^9.31.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "drizzle-kit": "^0.31.4",
    "vitest": "^3.2.4",
    "@testcontainers/postgresql": "^11.3.1",
    "@vitest/ui": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}